pipeline {
    agent {label 'build_java_11'}
    tools {nodejs "node"}
    stages {
        stage ('sourcecode') {
            steps {
                git branch: 'main', url: 'https://github.com/jyothisalagondla/vsts-task.git'
            }
        }
        stage('install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('npm build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('package') {
            steps {
                sh 'npm build pack'
            }
        }
    }
}
