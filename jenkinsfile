pipeline {
    agent {label 'build_java_11'}
    stages {
        stage ('sourcecode') {
            steps {
                git branch: 'main', url: 'https://github.com/jyothisalagondla/vsts-task.git'
            }
        }
        stage('install dependencies') {
            steps {
                sh 'npm install'
            }
        }
         stage('build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('package') {
            steps{
                sh 'npm pack'
           }
        }       
        stage(test) {
            steps {
                sh 'npm test'
            }
        }
             stage ('Artifactory configuration') {
            steps {
                
                rtNpmDeployer (
                    id: "NPM_DEPLOYER",
                    serverId: "jfrog",
                    repo: "npm-npm-local"   
                )
            }
        }
         stage ('Exec npm publish') {
            steps {
                rtNpmPublish (
                    tool: 'nodejs16.15.0',
                    deployerId: "NPM_DEPLOYER"
                )
            }
        }
        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "jfrog"
                )
            }
        }
    }
}