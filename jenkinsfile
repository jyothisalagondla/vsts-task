pipeline {
    agent {label 'build_java_11'}
    stages {
        stage ('sourcecode') {
            steps {
                git branch: 'main', url: 'https://github.com/jyothisalagondla/vsts-task.git'
            }
        }
        stage('install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('build') {
            steps {
                sh 'npm run build'
            }
        }
        stage(test) {
            steps {
                sh 'npm test'
            }
        }
        stage('package') {
            steps{
                sh 'npm pack'
           }
        }               
        stage('Artifactory-Configuration') {
            steps {
                rtNpmDeployer (
                    id: 'nodejsnpm-deployer',
                    serverId: 'jfrog',
                    repo: 'npm-npm-local',

                )
            }
        }
        stage('deploy') {
            steps {

                rtNpmPublish (
                    tool: 'nodejs16.15.0',
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: 'nodejsnpm-deployer',
                )

            }
        }        
        stage('build') {
            steps {
                rtPublishinfo(
                    serverid: 'jfrog',
                )
            }
        }
    }
}
